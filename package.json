{
  "name": "ebayclone",
  "version": "1.0.0",
  "description": "A global online marketplace clone",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "docs:serve": "node server.js",
    "docs:build": "mkdir -p docs/dist && cp -r docs/*.yaml docs/dist/",
    "docs:en": "swagger-ui-serve swagger_en.yaml --host ebay-clone.olga-orlova.me --port 3001 --path /docs/en",
    "docs:et": "swagger-ui-serve swagger_et.yaml --host ebay-clone.olga-orlova.me --port 3002 --path /docs/et"
  },
  "keywords": [
    "marketplace",
    "ecommerce",
    "api"
  ],
  "author": "Olga Orlova",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.9.0",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.1",
    "react-router-dom": "^7.6.1",
    "swagger-ui-express": "^4.6.3",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "jest": "^29.7.0",
    "nodemon": "^3.0.3",
    "postcss": "^8.5.4",
    "tailwindcss": "^4.1.8"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
